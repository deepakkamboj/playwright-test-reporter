{
    "name": "playwright-test-reporter",
    "version": "0.0.1",
    "description": "A CI-friendly custom reporter for Playwright tests with enhanced logging.",
    "main": "dist/Reporter.js",
    "types": "dist/Reporter.d.ts",
    "exports": {
        ".": {
            "import": "./dist/Reporter.js",
            "require": "./dist/Reporter.js",
            "types": "./dist/Reporter.d.ts"
        }
    },
    "dependencies": {
        "essential-common-utils": "^1.6.0",
        "winston": "^3.17.0"
    },
    "devDependencies": {
        "@playwright/test": "^1.50.1",
        "@types/node": "^22.13.4",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-prettier": "^5.2.3",
        "jest": "^29.7.0",
        "prettier": "^3.5.1",
        "standard-version": "^9.5.0",
        "ts-jest": "^29.2.5",
        "typescript": "^5.7.3"
    },
    "scripts": {
        "build": "tsc",
        "lint": "eslint . --fix && prettier . --write",
        "prettier": "prettier . --write",
        "release": "standard-version",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "test:e2e:debug": "playwright test --debug",
        "test:e2e:headed": "playwright test --headed",
        "test:e2e:report": "playwright show-report"
    }
}
